<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/layout_custom_tab_icon"
            android:layout_width="@dimen/image_24dp"
            android:layout_height="@dimen/image_24dp"
            android:layout_marginHorizontal="@dimen/global_12dp"
            android:layout_marginTop="@dimen/global_8dp" />

        <TextView
            android:id="@+id/layout_custom_tab_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/global_4dp"
            android:layout_marginBottom="@dimen/global_4dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_14sp" />

    </LinearLayout>
</layout>